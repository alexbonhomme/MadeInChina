<!DOCTYPE html>
<html>
  <head>
    <title>Made In China - Your-Commerce</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="{{ asset('bundles/micyc/css/bootstrap.min.css')}}" rel="stylesheet" media="screen">
  </head>
  <body>
	<div class="navbar">
		<div class="navbar-inner">
			<a class="brand" href="#">Made In China - Your-Commerce</a>
			<ul class="nav">
				<li class="active"><a href="#">Home</a></li>
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<li><a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a></li>
					<li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
				{% else %}
					<li><a href="{{ path('fos_user_security_login') }}">Login</a></li><li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
				{% endif %}
			</ul>
		</div>
	</div>
	
	{% block content %}
		Content
	{% endblock content %}
	
    <script src="http://code.jquery.com/jquery.js"></script>
    <script src="{{ asset('bundles/micyc/js/bootstrap.min.js') }}"></script>
  </body>
</html>